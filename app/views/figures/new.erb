<h1>Create a new Figure</h1>

<form action="/figures" method="post">

  <label>Enter Figure Name <input type="text" name="figure[name]" id="figure_name"> </label>
  <label>Select Landmarks  </label>
    <%Landmark.all.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%>
    <% end %>
  <br>
  <p>Or create your own</p>
  <label>Enter Landmark Name <input type="text" name="landmark[name]" id="new_landmark"> </label>
  <label>Enter Landmark Year Completed <input type="text" name="landmark[year_completed]" id="new_landmark_year_completed"> </label>

  <label>Select Titles </label>
  <%Title.all.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%>
  <% end %>
  <br>
  <p>Or create your own</p>
  <label>Enter Title Name <input type="text" name="title[name]" id="new_title"> </label>

  <input type="submit" name="Create New Figure" id="Create New Figure">
</form>